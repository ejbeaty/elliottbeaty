html, body {
    height: 100%;
}
body {
    margin: 0;
}
.page-container {
    height: 100%;
    padding: 0;
    margin: 0;
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
}


.page-section{
    padding: 5px;
    margin: 10px;
    color: white;
    font-weight: bold;
}
.center-page {
    height: 100px;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto
}
.signature-text {
    color: white;
    font-size: 4em;
    font-family: 'Mr Dafoe', cursive;
    letter-spacing: 0px;
    text-align:center;
}
.signature-toggle ul{
    font-size:2em;
    padding-right:65px;
}
.big-center-text {
    color: white;
    font-size: 5em;
    font-weight: bold;
    font-family: 'Teko', sans-serif;
    letter-spacing: 4px;
    text-align: center;
    text-transform: uppercase;
}
body {
    background-image: url("/images/ElliottBackground.png");
    background-size: cover;
    background-attachment: fixed;
}


.red {
    display: inline-block;
}

.red-always {
    color: red;
}

.red-always ul{
    color: red;
}

.red:hover {
    color: red;
}
.float-right {
    float: right;
}

.float-left {
    float: left;
}
.contact-logos{
    display:inline-flex;
}
.contact-logo{
    margin:30px;
    height:66px;
    width:66px;
}

.contact-logo:hover{
    opacity:.35;
}

/* Small Devices, Tablets */

    @media only screen and (max-width : 790px) {
    .big-center-text {
        font-size: 3em;
        letter-spacing: 2px;
    }

    .signature-text{
        font-size: 3em;
    }
}

/* Extra Small Devices, Phones */
@media only screen and (max-width : 440px) {
    .big-center-text {
        font-size: 1.8em;
        letter-spacing: 1px;
    }
    .contact-logos{
        display:flex;
    }
}
